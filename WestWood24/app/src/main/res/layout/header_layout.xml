<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_main_rl"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@mipmap/splash_bg">
    <ImageView
        android:id="@+id/img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/left_arrow2"
        android:visibility="visible" />
    <RelativeLayout
        android:id="@+id/header_layout_back_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp">

        <ImageView
            android:id="@+id/img_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/left_arrow2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/edittextsize"
            android:visibility="visible" />

    </RelativeLayout>

    <com.westwood24.connect.font.TextViewMyriad_bld
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/header_layout_back_rl"
        android:singleLine="true"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/light_yellow"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/txt_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/edittextsize"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/header_layout_comment_add_see_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:src="@mipmap/cancel1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/header_layout_vote_see_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:src="@mipmap/vote_give_img"
        android:visibility="gone" />


</RelativeLayout>
