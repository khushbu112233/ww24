        <RelativeLayout
            android:id="@+id/list_row_title_video_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtvideotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/list_row_watch_img"
                android:maxLines="3"
                android:text="Good"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/edittextsize" />

            <ImageView
                android:id="@+id/list_row_watch_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/list_row_watching_time_tv"
                android:src="@mipmap/timetopost_icon" />

            <TextView
                android:id="@+id/list_row_watching_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:text="3h"
                android:textColor="@color/Black" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/list_row_title_video_rl">


            <ImageView
                android:id="@+id/thumbImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="center" />

            <WebView
                android:id="@+id/videoimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/play"
                android:layout_width="50dp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:alpha="130"
                android:background="@mipmap/play_video_img" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_row_header_ln"
            android:layout_width="match_parent"
            android:layout_below="@+id/rel"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/Black"
                android:textSize="@dimen/description_size"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_row_header_ln"
            android:paddingLeft="8dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="15dp">


            <ImageView
                android:id="@+id/list_row_viewiser_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="8dp"
                android:src="@mipmap/view" />

            <TextView
                android:id="@+id/list_row_viewuser_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/list_row_viewiser_img"
                android:paddingBottom="8dp"
                android:text="16.3k"
                android:textColor="@color/text_tab_unselected"
                android:textSize="@dimen/lablesize1" />


            <ImageView
                android:id="@+id/list_row_likeofuser_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/list_row_viewuser_tv"
                android:paddingBottom="8dp"
                android:src="@mipmap/viewuser_img" />

            <TextView
                android:id="@+id/list_row_likeofuser_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/list_row_likeofuser_img"
                android:paddingBottom="8dp"
                android:text="16.3k"
                android:textColor="@color/text_tab_unselected"
                android:textSize="@dimen/lablesize1" />

            <TextView
                android:id="@+id/txt_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:text="Expand"
                android:layout_alignRight="@+id/list_row_likeofuser_tv_tv"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/sign_up_bg"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/description_size"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_row_header_ln1"
            android:layout_width="match_parent"
            android:layout_below="@+id/rel_1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/que_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="8dp"
                android:text="what is your designation?"

                android:textColor="#000000"
                android:textSize="14sp"
                />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/list_row_header_ln2"
            android:layout_width="match_parent"
            android:layout_below="@+id/list_row_header_ln1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/list_row_header_ln3"
            android:layout_width="match_parent"
            android:layout_below="@+id/list_row_header_ln2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_pie"
                    android:layout_width="30dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/pie_graph2" />
                <ImageView
                    android:id="@+id/img_bar"
                    android:layout_width="30dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/bar_graph2" />
            </LinearLayout>

            <TextView
                android:id="@+id/que_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="SUBMIT"
                android:layout_alignRight="@+id/ll_graph"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:padding="5dp"
                android:background="@color/sign_up_bg"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/description_size"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_see_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/list_row_header_ln3"
            >
            <TextView
                android:id="@+id/txt_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/See_More"
                android:textColor="@color/purple_see_more"
                android:textSize="@dimen/description_size"/>
            <ImageView
                android:id="@+id/img_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/txt_view_more"
                android:background="@mipmap/seemore" />
        </RelativeLayout>
    </RelativeLayout>



    <TextView
        android:id="@+id/list_row_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_row_top_rl"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/comment"
        android:textSize="20sp"
        android:visibility="gone" />


</RelativeLayout>